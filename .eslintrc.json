{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"plugin:@typescript-eslint/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"no-restricted-syntax": [
			"error",
			"WithStatement"
		],
		"max-len": "off",
		"no-tabs": "off",
		"no-plusplus": "off",
		"linebreak-style": "off",
		"prefer-arrow-callback": "off",
		"func-names": "off",
		"no-await-in-loop": "off",
		"class-methods-use-this": "off",
		"no-param-reassign": "off",
		"no-continue": "off",
		"no-console": "off",
		"no-undef": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [
					".ts",
					".js"
				]
			}
		}
	}
}
