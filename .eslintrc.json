{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "error",
            "tab"
		],
		"no-restricted-syntax": [
			"error",
			"WithStatement"
		],
		"max-len": [
			"error",
			120
		],
		"no-tabs": "off",
		"no-plusplus": "off",
		"linebreak-style": "off",
		"prefer-arrow-callback": "off",
		"func-names": "off",
		"no-await-in-loop": "off",
		"class-methods-use-this": "off",
		"no-param-reassign": "off",
		"no-continue": "off",
		"no-console": "off"
    }
}
